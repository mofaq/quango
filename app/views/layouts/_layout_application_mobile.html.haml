
- debug = params[:debug]

!!! Strict
%html{"xml:lang" => I18n.locale, :lang => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml",  "xmlns:og" => "http://ogp.me/ns#"  }
  %head
    = "<meta http-equiv=\"content-type\" content=\"text/html; charset=utf-8\" />"
    = "<meta http-equiv=\"cache-control\" content=\"public\" />"
    = "<meta http-equiv=\"content-language\" content=\"en\" />"
    = "<meta name=\"generator\" content=\"MOFAQ\" />"

    = render :partial => "layouts/ua"
    = render :partial => "layouts/geo"

    %title
      &= page_title

    = render :partial => "shared/layout/meta"

    = render :partial => "shared/layout/css_mobile"

    = yield :head



    = javascript_include_merged :mobile
    = yield :custom_javascript
    = yield :js

    = current_group.head_tag
    = render :partial => "shared/layout/analytics"



  %body

    #toolbar
      = render :partial => "layouts/toolbar_mobile"

    = render :partial => "shared/header_mobile"

    #body
      = yield :main

      -if current_group.has_sponsor?
        .sponsor
          = render :partial => "layouts/sponsor"
        .clear

    #footer
      = render :partial => "layouts/footer_mobile"
      = render :partial => "layouts/footer_info"

    #flash
      .container
        = show_flash_messages(:class => "flash", :markdown => true)

    = yield :javascript_init

    - if debug
      #debug
        = render :partial => "layouts/debug"







