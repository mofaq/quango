

-content_for :main do

  .container{:style=>"height:48px;width:464px;padding:16px;"}
    .inset{:style=>"height:48px;line-height:48px;padding:0 16px;margin:0;"}                          
      .subheading.left
        ="#{@location.name}"

      .subheading.right
        %ul.right{:style=>"list-style-type:none; display:inline;"}
          %li{:style=>"display:inline"}
            = link_to "Back", locations_path, :class=>"inner-button"

      - if logged_in?
        - if current_user.mod_of?(current_group)
          .subheading.right
            %ul.right{:style=>"list-style-type:none; display:inline;"}
              %li{:style=>"display:inline"}
                = link_to "Delete", location_path(@location), :confirm => "Are you sure?", :method => :delete

              %li{:style=>"display:inline"}
                = link_to "Edit", edit_location_path(@location), :class => "inner-button", :style=>"height:1.5em;"

        -# else




  .container{:style=>"width:464px;padding:0 16px;"}

    .inset.map-holder{:style=>"width:216px; height:auto;margin:0 0 16px 0",:class=>"left"}
      .map.inset{:id => "map_canvas", :style=>"width:200px; height:200px; border-radius:8px;"}

    .primary.inset.address{:style=>"font-weight:bold;float:right;width:200px;margin-top:0;"}
      %h2
        = "Our Address:"

      .address-name
        = "#{@location.name}"
      .address-line-one
        = "#{@location.loc_address_i}"
      .address-line-two
        = "#{@location.loc_address_ii}"
      .address-city
        = "#{@location.loc_city}"
      .address-state
        = "#{@location.loc_state} "
        = "#{@location.loc_postcode}"

      .address-country{:style=>"size:1em;text-transform:uppercase;font-weight:bold;"}
        = "#{@location.loc_region}"

      .spacer
        = "&nbsp;"

      %hr
  
      .note
        = "Opening hours:</br>"
        = "#{@location.opening_hours1}"



      - if @location.show_alt_button == true
        .spacer{:style=>"margin-top:8px"} 
        .inner-button{:style=>"width:164px;height:32px;font-size:1.1em;letter-spacing:-1px;text-align:center;margin:4px auto;line-height:32px;"}
          = link_to "#{@location.alt_button_text}","#{@location.alt_button_link}",:style=>"color:#{current_group.text_colour};"
  .clear


  -if @location.loc_phone
    .spacer{:style=>"margin-top:8px"} 

    .container{:style=>"margin:0;padding:12px 16px 8px 16px;width:464px;"}
      .primary.inset{:style=>"padding:12px 16px 16px 16px;height:56px;"}
        .inner-button.submit{:onclick=>"window.location=\'tel:#{@location.loc_phone}'",:style=>"width:400px;text-align:center;line-height:48px;height:48px;font-size:28px;"}
          = "â˜Ž Call #{@location.name}"  


  -if @location.show_facebook == true
    .container{:style=>"margin:0;padding:8px 16px 8px 16px;width:464px;"}
      .primary.inset{:style=>"padding:12px 16px 16px 16px;height:56px;"}
        .inset.hold{:style=>"height:56px;width:56px;margin:0;padding:0;float:left;background-image:url(/images/share/facebook_56.png);"}
          = "&nbsp;"

        .inner-button{:onclick=>"window.location=\'http:\/\/#{@location.loc_facebook}'",:style=>"width:328px;text-align:center;line-height:48px;height:48px;float:right;"}

          = "Also on Facebook"  



  .clear
  .spacer
    = "&nbsp;"



-content_for :custom_javascript do
  :javascript
    function createMap(geo) {
      var options = {
        center: geo,
        zoom: 16,
        mapTypeId: google.maps.MapTypeId.ROADMAP,
        zoomControl: true,
        panControl: false,
        streetViewControl: false,
        mapTypeControl: false
      };
      var canvas = document.getElementById('map_canvas');
      var map =  new google.maps.Map(canvas,options);
      //map.panBy(-50,-50);
      //map.panBy(100,100);

      var marker = new google.maps.Marker({
        position: geo,
        map: map,
        title: "Stuff marker"
      });

      var overlay = new google.maps.InfoWindow({
        content: "x"
      });
      //open(map,marker);
      return map;
    }
    function initMap() {
      var map = null;
      var geo = new google.maps.LatLng(#{@location.latitude},#{@location.longitude});
      var address = null;


      map = createMap(geo);
    }
    //initMap();

-content_for :javascript_init do
  :javascript
    initMap();


