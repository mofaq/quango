

-edit = params[:edit]

-content_for :main do



  - if !edit.present?

    .container{:style=>"height:48px;width:464px;padding:4px 16px 16px 16px;"}
      .inset{:style=>"height:48px;line-height:48px;padding:0 16px;margin:0;"}                          
        .subheading.left
          ="#{current_group.welcome_pages_heading}"
        -if current_user
          -if current_user.owner_of?(current_group)
            .subheading.right
              .inner-button{:style=>"line-height:24px;height:24px;margin:8px 0;"}
                = link_to "Edit", pages_path+'?edit=true',:style=>"color:white;"

    .container{:style=>"width:464px;"}
      -# time = Time.new
      -# pass_var = time.wday  + "?var=" + "#{pass_var}"

      - current_group.pages.each do |page|
        - if page.hide != true
          .inner-button{:style=>"margin-bottom:12px;", :onclick=>"window.location='#{page_path(page)}'"}
            .star{:style=>"margin-top:4px;font-size:200%;float:right;"}
              = "&#X279C;"
            = link_to "#{page.title}",page_path(page),:class=>"inner-button-link",:style=>"font-size:25px;line-height:46px;"



      -if current_group.action_button?
        %div.container{:style=>"margin:0;padding:8px 0 8px 0;width:464px;"}
          .inset{:style=>"margin:0 0 32px 0;background:#{current_group.primary};"}
            -if !current_group.action_button_note.empty?
              .note{:style=>"text-align:center; "}
                = "#{current_group.action_button_note}"
            .empty{:style=>"margin:0 auto;width:480px;"}
              .inner-button.submit{:style=>"text-align:center;margin:8px 40px; width:400px;height:48px;line-height:48px;"}
                = link_to "#{current_group.action_button_text}","#{current_group.action_button_link}", :style=>"color:#{current_group.text_colour};font-size:25px;letter-spacing:-2px;"
            .clear

  - if edit.present?

    -if current_user
      -if current_user.owner_of?(current_group)


        .container{:style=>"height:48px;width:464px;padding:4px 16px 16px 16px;"}
          .inset{:style=>"height:48px;line-height:48px;padding:0 16px;margin:0;"}                          
            .subheading.left
              ="Pages Section"
            .subheading.right
              .inner-button{:style=>"line-height:22px;height:22px;margin:8px 0;"}
                = link_to "Preview", pages_path,:style=>"color:white;"

        .container{:style=>"padding:16px;width:464px;"}

          %table{:style=>"width:464px;"}
            -@pages.each do |page|
              %tr
                %td

                -form_tag move_page_path(page) do
                  %td.order
                    = submit_tag("up", :name=>"move_to", :value => "up",:class=>"inner-button")
                  %td.order 
                    = submit_tag("down", :name=>"move_to", :value => "down",:class=>"inner-button")


                %td
                  = link_to h(page.title), page_path(page)
                %td
                  - if page.hide?
                    = "hidden"
                %td
                  - if page.redirect?
                    = "&#9902;"
                %td
                  -if logged_in? && current_user.can_edit_wiki_post_on?(current_group)
                    =link_to t("scaffold.edit"), edit_page_path(page)
                    -if current_user.mod_of?(current_group)
                      .box.left
                        =link_to "[X]", page_path(page.id), :class => "important", :method => :delete, :confirm => t("scaffold.sure", :model => t("activerecord.models.page"))

          .inner-button.submit{:style=>"text-align:center;width:276px;height:40px;"}
            = link_to "Add page", new_page_path,:style=>"color:white;"


          .clear


        .container{:style=>"height:48px;width:464px;padding:4px 16px 16px 16px;"}
          .inset{:style=>"height:48px;line-height:48px;padding:0 16px;margin:0;"}                          
            .subheading.left
              ="Section Settings"

        .container
          -form_for(@group, :html => {:class => "form", :multipart => true}) do |f|
            = f.error_messages
            - source = domain_url(:custom => @group.domain, :controller => "admin/manage", :action => "properties", :tab => @active_subtab)
            - source = source << "&mobile=true"

            .group

              = f.check_box :welcome_pages, :class => "check_box"
              = f.label :welcome_pages, "Show this section on welcome page"


            .group
              .note
                = "Heading"
              = f.text_field :welcome_pages_heading, :class=> "text_field_mobile_edit"


            .group
              %button.inner-button.submit.right{:style=>"margin:0 0 32px;"}
                = "Save"
            .clear












